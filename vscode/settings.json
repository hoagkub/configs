{
    "workbench.sideBar.location": "right",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "GitHub Dark",
    "editor.multiCursorPaste": "full",
    "vscode-office.openOutline": true,
    "git.mergeEditor": true,
    "files.exclude": {
        "**/.DS_Store": false,
        "**/.git": false,
        "**/.hg": false,
        "**/.svn": false,
        "**/CVS": false,
        "**/Thumbs.db": false
    },
    "notebook.output.scrolling": true,
    "workbench.editor.showTabs": "single",
    "workbench.tree.indent": 16,
    "editor.renderWhitespace": "all",
    "notebook.editorOptionsCustomizations": {
        "editor.tabSize": 4,
        "editor.indentSize": 4,
        "editor.insertSpaces": true
    },
    "remote.SSH.defaultExtensions": [
        "cweijan.vscode-office",
        "eamodio.gitlens",
        "github.github-vscode-theme",
        "gitlab.gitlab-workflow",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-ssh-edit",
        "ms-vscode-remote.remote-wsl",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-vscode.remote-explorer",
        "ms-vscode.remote-server",
        "ryu1kn.partial-diff",
        "t-nano.markdown-to-confluence-vscode",
        "yo1dog.cursor-align",
        "sleistner.vscode-fileutils",
        "yzhang.markdown-all-in-one"
    ],
    "workbench.editorAssociations": {
        "*.md": "default",
        "*.csv": "default",
        "*.markdown": "default"
    },
    "notebook.diff.ignoreMetadata": true,
    "notebook.diff.ignoreOutputs": true,
    "workbench.panel.showLabels": false,
    "diffEditor.renderSideBySide": true,
    "remote.autoForwardPortsSource": "hybrid",
    "workbench.editor.enablePreview": false,
    "explorer.autoReveal": false,
    "terminal.integrated.profiles.linux": {
        "bash-tmux": {
            "path": "bash",
            "args": [
                "-c",
                // "SESSION=vscode${PWD//\\//_}; tmux new-window -t $SESSION; tmux new-session -A -D -s $SESSION"
                "SESSION=vscode_dercules; (tmux new-window -t $SESSION; tmux new-session -A -D -s $SESSION) || bash"
            ]
        }
    },
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.terminal.paste"
    ],
    "terminal.integrated.defaultProfile.linux": "bash-tmux",
    "vscode-office.editorTheme": "Github Dark",
    "gitlens.views.commits.files.layout": "tree",
    "terminal.integrated.fontSize": 16,
    "editor.fontSize": 16,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "notebook.insertFinalNewline": true,
    "workbench.list.horizontalScrolling": true,
    "explorer.compactFolders": false,
    "scm.compactFolders": false
}






